<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryanm.connect.MainActivity">

    <Button
        android:id="@+id/toggle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle 1"
        android:onClick="toggle1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/toggle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle 2"
        android:onClick="toggle2"
        app:layout_constraintTop_toBottomOf="@id/toggle1"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/turnon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn on"
        android:onClick="turnon"
        app:layout_constraintTop_toBottomOf="@id/toggle2"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/turnoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn off"
        android:onClick="turnoff"
        app:layout_constraintTop_toBottomOf="@id/turnon"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
